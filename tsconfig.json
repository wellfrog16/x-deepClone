{
    "compilerOptions": {
      "target": "es5",
      "module": "esnext",
      "lib": [
        "es6",
        "dom",
        "es2015.promise"
      ] ,
      "allowJs": false,
      "skipLibCheck": true,
      "declaration": true,
      "sourceMap": true,
      "outDir": "./dist/",
      "removeComments": true,
      "strict": true,
      "noImplicitAny": false ,
      "esModuleInterop": true 
    },
    "exclude": ["build", "dist", "*.config.js"]
  }